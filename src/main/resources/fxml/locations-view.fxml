<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.202" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <SplitPane dividerPositions="0.6" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <items>
                <TableView fx:id="tableLocation" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Location ID" />
                        <TableColumn prefWidth="75.0" text="Name" />
                        <TableColumn prefWidth="75.0" text="Type" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <children>
                        <HBox alignment="CENTER" VBox.vgrow="NEVER">
                            <children>
                                <Label text="Location">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Pane prefHeight="10.0" prefWidth="10.0" HBox.hgrow="ALWAYS" />
                                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onNewLocation" prefWidth="80.0" text="New" />
                            </children>
                        </HBox>
                        <Label text="Location ID">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="fieldId" promptText="ID" />
                        <Label text="Name">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="fieldName" maxWidth="1.7976931348623157E308" promptText="Name" />
                        <Label text="Type">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                  <ComboBox fx:id="fieldType" prefWidth="150.0" promptText="Select" />
                        <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="NEVER">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onSaveLocation" prefWidth="80.0" text="Save" />
                                <Button mnemonicParsing="false" onAction="#onDeleteLocation" prefWidth="80.0" text="Delete" />
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
